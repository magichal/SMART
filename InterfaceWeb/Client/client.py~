#!/usr/bin/python3

# Definition d'un client reseau rudimentaire
# Ce client dialogue avec un serveur ad hoc

import socket, sys
import package.SimulLed
from tkinter import *

HOST = '127.0.0.1'
PORT = 50000
NOM = "RP1"

# 1) creation du socket :
mySocket = socket.socket(socket.AF_INET, socket.SOCK_STREAM)

# 2) envoi d'une requete de connexion au serveur :
try:
    mySocket.connect((HOST, PORT))
except socket.error:
    print("La connexion a echoue.")
    sys.exit()    
print("Connexion etablie avec le serveur.")
    
# 3) Dialogue avec le serveur :
#msgServeur = mySocket.recv(1024)

bouton = Button(None, text='Espace pour quitter')
mySocket.send("RP1")
print ("coco")
SimulLed(NOM)
led = ""
ledHisto = ""
while 1:
    led = SimulLed.getLed()
    print("la led allume:", led)
    #    if led!=ledHisto:
    mySocket.send(led)
    ledHisto = led
    root.bind("<space>",Stop)


    
def Stop(event):
    # 4) Fermeture de la connexion :
    print("Connexion interrompue.")
    mySocket.close()


    
