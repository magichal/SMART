import RPi.GPIO as GPIO
import time

GPIO.setmode(GPIO.BCM)

GPIO.setup(12, GPIO.IN, pull_up_down=GPIO.PUD_UP)         # sud
GPIO.setup(13, GPIO.IN, pull_up_down=GPIO.PUD_UP)         # nord
GPIO.setup(17, GPIO.IN, pull_up_down=GPIO.PUD_UP)         # est
GPIO.setup(18, GPIO.IN, pull_up_down=GPIO.PUD_UP)         # ouest


while(1):
    if(GPIO.input(12)==1):
        print("sud")
    else if(GPIO.input(13)==1):
        print("nord")
    else if(GPIO.input(17)==1):
        print("est")
    else if(GPIO.input(18)==1):
        print("ouest")





